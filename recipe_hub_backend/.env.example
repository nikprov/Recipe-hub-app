# Django configuration
# Replace this with your own generated secret key
SECRET_KEY='django-insecure-example-key-replace-this'
DEBUG=True

# Database configuration
# Option 1: SQLite (simpler setup)
DATABASE_URL=sqlite:///db.sqlite3

# Option 2: MySQL configuration (if you choose to use MySQL)
# Uncomment and fill these if using MySQL
# DB_NAME=recipe_hub_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=3306

# JWT configuration (token lifetimes in minutes)
JWT_ACCESS_TOKEN_LIFETIME=50  # Short-lived access token
JWT_REFRESH_TOKEN_LIFETIME=1440  # 24-hour refresh token